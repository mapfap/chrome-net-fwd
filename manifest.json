{
  "name": "Hack",
  "description": "Hack",
  "version": "0.1",
  "permissions": [
    "debugger"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Hack"
  },
  "_content_scripts": [
      {
        "matches": ["*://mapfap.com/*"],
        "_js": ["js/content-script.js"],
        "css" : ["app.css"]
      },
      {
        "matches": ["*://facebook.com/*"],
        "_js": ["js/content-script.js"],
        "css" : ["app.css"]
      }
  ],
  "manifest_version": 2
}
